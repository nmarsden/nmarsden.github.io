{
  "private": true,
  "name": "nmarsden.github.io",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-sw",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --refresh",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' 'tests/**/*.test.{ts,tsx}'",
    "test": "jest ./tests",
    "predeploy": "npm run build && cp CNAME ./build/CNAME",
    "deploy": "gh-pages -d build",
    "convert-screenshots": "npm run convert-screenshots:standard && npm run convert-screenshots:card",
    "convert-screenshots:standard": "sharp -i './screenshots/*.*' -f 'jpg' -o './src/assets/screenshots/{name}.jpg'",
    "convert-screenshots:card": "sharp -i './screenshots/*.*' -f 'jpg' -o './src/assets/screenshots/{name}-card.jpg' resize 160 120"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "gh-pages": "^3.2.3",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "sharp-cli": "^1.15.0",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
